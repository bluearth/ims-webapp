<?xml version="1.0" encoding="UTF-8" ?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="regionListWindow" apply="${regionListComposer}" border="none"
		width="100%">

		<style>
			body { padding: 0 0; /* 0 padding on top and bottom and 0
			padding on right and left */ }
		</style>

		<panel id="panel_RegionList"
			title="${c:l('panel_RegionList.title')}" border="none" />
		<toolbar>
			<button id="btnRefresh"
				image="/images/icons/refresh2_yellow_16x16.gif"
				tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
			<separator orient="vertical" />
			<button id="button_RegionList_NewRegion"
				image="/images/icons/btn_new2_16x16.gif"
				tooltiptext="${c:l('button_RegionList_NewRegion.tooltiptext')}" />
		</toolbar>


		<hbox id="hbox_RegionList_SearchRegions" style="padding: 3px">
			<space />
			<label id="label_RegionList_rgName"
				value="${c:l('label_RegionList_rgName.value')}" />
			<textbox id="tb_Region_Name" width="100px" />
			<button id="button_RegionList_SearchName"
				image="/images/icons/search.gif"
				label="${c:l('button_RegionList_SearchName.label')}"
				tooltiptext="${c:l('button_RegionList_SearchName.tooltiptext')}" />
			
		</hbox>


		<borderlayout id="borderLayout_RegionList">

			<north border="none" height="26px">
				<paging id="paging_RegionList" />
			</north>

			<center border="none">

				<listbox id="listBoxRegion" vflex="true" width="99.9%"
					height="100%" tooltiptext="${c:l('listbox.tooltiptext')}"
					multiple="false">
					<listhead sizable="true">
						<listheader
							id="listheader_RegionList_rgTeritory"
							image="/images/icons/create_doc.gif" sort="auto" width="15%"
							label="${c:l('listheader_RegionList_rgTeritory.label')}" />
						<listheader
							id="listheader_RegionList_rgName"
							image="/images/icons/create_doc.gif" sort="auto" width="15%"
							label="${c:l('listheader_RegionList_rgName.label')}" />
						</listhead>
				</listbox>

			</center>
			<south border="none" />

		</borderlayout>

	</window>
</zk>

