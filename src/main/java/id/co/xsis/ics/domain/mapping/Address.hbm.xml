<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.xsis.ics.domain.Address" table="ADDRESS">
        
        <id name="id" type="long">
            <column name="ADDRESS_ID" precision="22" scale="0" />
            <generator class="sequence">
				<param name="sequence">ADDRESS_ID_S</param>
			</generator>
        </id>
       
        <property name="creationDate" type="date">
            <column name="CREATION_DATE" length="7" />
        </property>
       
        <property name="createdBy" type="long">        
            <column name="CREATED_BY" precision="22" scale="0" />
        </property>
       
        <property name="lastUpdatedDate" type="date">
            <column name="LAST_UPDATED_DATE" length="7" />
        </property>
        
        <property name="lastUpdatedBy" type="long">
            <column name="LAST_UPDATED_BY" precision="22" scale="0" />
        </property>
        
        <property name="street" type="string">
            <column name="STREET" length="200" not-null="true" />
        </property>
        
        <property name="village" type="string">
            <column name="VILLAGE" length="150" not-null="true" />
        </property>
        
        <property name="subdistrict" type="string">
            <column name="SUBDISTRICT" length="150" not-null="true" />
        </property>
       
        <property name="district" type="string">
            <column name="DISTRICT" length="150" not-null="true" />
        </property>
        
        <property name="province" type="string">
            <column name="PROVINCE" length="150" not-null="true" />
        </property>
        
    </class>
</hibernate-mapping>
