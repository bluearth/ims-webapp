<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="pagedListService"
        class="com.xsis.paging.service.impl.PagedListServiceImpl" scope="session">
        <property name="hibernateSearchSupport" ref="hibernateSearchSupport" />
    </bean>

    <bean id="hibernateSearchSupport"
        class="com.xsis.paging.dao.impl.HibernateSearchSupportImpl">
        <property name="sessionFactory" ref="sessionFactory" />
        <property name="hibernateSearchProcessor">
            <bean class="com.trg.search.hibernate.HibernateSearchProcessor" factory-method="getInstanceForSessionFactory">
                <constructor-arg ref="sessionFactory" />
            </bean>
        </property>
    </bean>
</beans>