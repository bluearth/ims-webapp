<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.xsis.ics.domain.RouteTemplate" table="ROUTES_TEMPLATE">
		
		<id name="id" type="long">
            <column name="TEMPLATE_ID" />
            <generator class="sequence">
				<param name="sequence">TEMPLATE_ID_S</param>
			</generator>
        </id>
        
        <property name="createdBy" type="long">
        	<column name="created_by"/>
        </property>
       
        <property name="creationDate" type="date">
        	<column name="CREATION_DATE"/>
        </property>
        
        <property name="lastUpdatedBy" type="long">
        	<column name="LAST_UPDATED_BY"/>
        </property>
       
        <property name="lastUpdatedDate" type="date">
        	<column name="LAST_UPDATED_DATE"/>
        </property>	
        
        <property name="templateName" type="string">
        	<column name="TEMPLATE_NAME"/>
        </property>
        
        <property name="activeFlag" type="string">
        	<column name="ACTIVE_FLAG"/>
        </property>
        
        <many-to-one name="dealer" class="com.xsis.ics.domain.Dealer" column="DEALER_ID" fetch="select"/>
                
        <set name="routeTemplateDetails" inverse="true" lazy="true" table="ROUTES_TEMPLATE_DETAIL" fetch="select" cascade="all">
            <key>
                <column name="TEMPLATE_ID" precision="22" scale="0" />
            </key>
            <one-to-many class="com.xsis.ics.domain.RouteTemplateDetail" />
        </set>
        
<!--        <many-to-one name="canvasser" class="com.xsis.ics.domain.Canvasser" column="CANVASSER_ID" fetch="select"/>-->
     </class>
</hibernate-mapping>
