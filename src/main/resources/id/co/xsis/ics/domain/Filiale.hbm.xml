<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.xsis.ics.domain.Filiale" table="FILIALE">
       
        <id name="filId" type="long">
            <column name="FIL_ID" precision="8" scale="0" />
            <generator class="sequence">
            	<param name="sequence">FIL_ID_SEQ</param>
            </generator>
        </id>
        
        <property name="filNr" type="string">
            <column name="FIL_NR" length="20" />
        </property>
        
        <property name="filBezeichnung" type="string">
            <column name="FIL_BEZEICHNUNG" length="50" />
        </property>
        
        <property name="filName1" type="string">
            <column name="FIL_NAME1" length="50" />
        </property>
        
        <property name="filName2" type="string">
            <column name="FIL_NAME2" length="50" />
        </property>
        
        <property name="filOrt" type="string">
            <column name="FIL_ORT" length="50" />
        </property>
        
        <property name="vers" type="java.lang.Short">
            <column name="VERS" precision="4" scale="0" />
        </property>
        
    </class>
</hibernate-mapping>
