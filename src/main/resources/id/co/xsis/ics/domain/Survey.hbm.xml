<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.xsis.ics.domain.Survey" table="SURVEY">
        
        <id name="id" type="long">
            <column name="SURVEY_ID" precision="22" scale="0" />
            <generator class="sequence">
				<param name="sequence">SURVEY_ID_S</param>
			</generator>
        </id>
        <property name="surveyName" type="string">
            <column name="SURVEY_NAME" length="50" />
        </property>
        <property name="effectiveDate" type="timestamp">
            <column name="EFFECTIVE_DATE" />
        </property>
        
        <property name="ineffectiveDate" type="timestamp">
            <column name="INEFFECTIVE_DATE"  />
        </property>
       
        <property name="surveyDescription" type="string">
            <column name="SURVEY_DESCRIPTION" length="100" />
        </property>
       
        <property name="surveyStatus" type="string">
            <column name="SURVEY_STATUS" length="50" />
        </property>
       
        <property name="creationDate" type="timestamp">
            <column name="CREATION_DATE" />
        </property>
       
        <property name="createdBy" type="long">
            <column name="CREATED_BY" precision="22" scale="0" />
        </property>
       
        <property name="lastUpdatedDate" type="timestamp">
            <column name="LAST_UPDATED_DATE"/>
        </property>
        
        <property name="lastUpdatedBy" type="long">
            <column name="LAST_UPDATED_BY" precision="22" scale="0" />
        </property>
        
        <set name="details" inverse="true" lazy="true" fetch="select">
			<key>
				<column name="SURVEY_ID" />
			</key>
			<one-to-many class="com.xsis.ics.domain.SurveyDetail"/>
		 </set>
    </class>
</hibernate-mapping>
