<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.xsis.security.model.SecGroupright" table="sec_groupright">

		<id name="id" type="long">
			<column name="gri_id" />
			<generator class="sequence">
				<param name="sequence">GRI_ID_SEQ</param>
			</generator>
		</id>

		<version name="version" column="VERS" type="integer" />

		<many-to-one name="secGroup" class="com.xsis.security.model.SecGroup"
			fetch="select">
			<column name="grp_id" />
		</many-to-one>
		<many-to-one name="secRight" class="com.xsis.security.model.SecRight"
			fetch="select">
			<column name="rig_id" />
		</many-to-one>
	</class>
</hibernate-mapping>
