<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<class name="com.xsis.security.model.SecRegion" table="REGION">
		
		<id name="id" type="long">
            <column name="REGION_ID" />
            <generator class="sequence">
				<param name="sequence">REGION_ID_S</param>
			</generator>
        </id>
        
        <property name="createdBy" type="long">
        	<column name="created_by"/>
        </property>
       
        <property name="creationDate" type="date">
        	<column name="CREATION_DATE"/>
        </property>
        
        <property name="lastUpdatedBy" type="long">
        	<column name="LAST_UPDATED_BY"/>
        </property>
       
        <property name="lastUpdatedDate" type="date">
        	<column name="LAST_UPDATED_DATE"/>
        </property>	
        
         <property name="regionName" type="string">
        	<column name="REGION_NAME"/>
        </property>
        
         <property name="regionLongitude" type="big_decimal">
            <column name="region_longitude" />
        </property>
        
        <property name="regionLatitude" type="big_decimal">
            <column name="REGION_LATITUDE" />
        </property>
        
        <property name="regionCode" type="string">
        	<column name="REGION_CODE"/>
        </property>
        
        <many-to-one name="teritory" class="com.xsis.security.model.SecTeritory" fetch="select">
			<column name="TERRITORY_ID" />
		</many-to-one>

	</class>
</hibernate-mapping>
