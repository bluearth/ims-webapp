<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.xsis.security.model.SecGroup" table="sec_group">
	
		<id name="id" type="long">
			<column name="grp_id" />
			<generator class="sequence">
				<param name="sequence">GRP_ID_SEQ</param>
			</generator>
		</id>

		<version name="version" column="VERS" type="integer" />

		<property name="grpShortdescription" type="string">
			<column name="grp_shortdescription" length="30" not-null="true"
				unique="true" />
		</property>
		<property name="grpLongdescription" type="string">
			<column name="grp_longdescription" length="1000" />
		</property>
		<set name="secGrouprights" inverse="true">
			<key>
				<column name="grp_id" />
			</key>
			<one-to-many class="com.xsis.security.model.SecGroupright" />
		</set>
		<set name="secRolegroups" inverse="true">
			<key>
				<column name="grp_id" />
			</key>
			<one-to-many class="com.xsis.security.model.SecRolegroup" />
		</set>
	</class>
</hibernate-mapping>
